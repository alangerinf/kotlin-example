<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_24dp"
    android:layout_marginVertical="@dimen/margin_12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/row_entry_item_video_image_view_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/background_exercise" />

    <ImageView
        android:id="@+id/row_entry_item_video_image_view_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/margin_8dp"
        android:alpha="0.8"
        android:contentDescription="@string/delete"
        android:src="@drawable/ic_trash_circle" />

    <ImageButton
        android:id="@+id/row_entry_item_video_image_button_play"
        style="@style/ChatOwlImageButtonStyle.Tinted"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_play_circle_alt" />

</FrameLayout>