<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/app_tour_main_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_app_tour"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/app_tour_title_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.22"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/app_tour_first_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/app_tour_title_guide_line"
        tools:text="Hi there Nickname,"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/averta_semibold"
        android:gravity="center"
        android:textSize="22dp"
        />

    <TextView
        android:id="@+id/app_tour_second_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_tour_first_title"
        tools:text="long time no see!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/averta_semibold"
        android:gravity="center"
        android:textSize="22dp"

        />

    <TextView
        android:id="@+id/app_tour_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/app_tour_second_title"
        tools:text="Juan Carlos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/averta_semibold"
        android:gravity="center"
        android:textSize="22dp"

        />

    <TextView
        android:id="@+id/app_tour_subtitle"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/app_tour_nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Do you mind if I give you a quick update on what has happened since you left?"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/averta_semibold"
        android:textSize="14dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/app_tour_button_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        />

    <Button
        android:id="@+id/app_tour_first_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sounds great!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_tour_subtitle"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/app_tour_second_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No, thanks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_tour_first_button"
        android:background="@color/transparent_white"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_tour_chat_background_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="9dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_tour_chat_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>