<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_36dp"
        android:layout_marginTop="@dimen/margin_36dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/feature_onboarding_slide_page_image_view_frame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/background_onboarding_frame"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/feature_onboarding_slide_page_image_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@drawable/background_onboarding_1"
                app:layout_constraintBottom_toBottomOf="@+id/feature_onboarding_slide_page_image_view_frame"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@+id/feature_onboarding_slide_page_image_view_frame"
                app:layout_constraintStart_toStartOf="@+id/feature_onboarding_slide_page_image_view_frame"
                app:layout_constraintTop_toTopOf="@+id/feature_onboarding_slide_page_image_view_frame" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="@dimen/padding_24dp"
            android:weightSum="2"
            android:layout_weight="4"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/padding_8dp"
                app:layout_constraintBottom_toTopOf="@+id/feature_onboarding_slide_page_description">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/feature_onboarding_slide_page_title"
                    style="@style/ChatOwlTitleTextViewLightStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center|bottom"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="3sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="@dimen/text_size_20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Multiple tools" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="@dimen/padding_8dp"
                app:layout_constraintBottom_toTopOf="@+id/feature_onboarding_slide_page_description">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/feature_onboarding_slide_page_description"
                    style="@style/ChatOwlTextViewStyle.Smallish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="5sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="@dimen/text_size_14sp"
                    tools:text="P+ Nunc ullamcorper consectetur aliquet et varius tortor. Aliquam sit malesuada eget amet, sit." />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>