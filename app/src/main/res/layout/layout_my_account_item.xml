<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_my_account_item_root"
    android:background="@color/dark_50">

    <TextView
        android:id="@+id/layout_my_account_item_text_view_name"
        style="@style/ChatOwlTextViewStyle.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white_80"
        app:layout_constraintBottom_toTopOf="@id/layout_my_account_item_text_view_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Email" />

    <TextView
        android:id="@+id/layout_my_account_item_text_view_value"
        style="@style/ChatOwlTextViewStyle.Smallish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/layout_my_account_item_text_view_name"
        tools:text="john@example.com" />

    <TextView
        android:id="@+id/layout_my_account_item_text_view_edit"
        style="@style/ChatOwlTextViewStyle.Smallish.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/padding_8dp"
        android:text="@string/edit"
        android:textColor="@color/selector_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>