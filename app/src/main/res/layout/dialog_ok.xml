<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_ok_layout_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/windowBackground_dialog">

        <ImageView
            android:id="@+id/dialog_ok_image_view_icon"
            android:layout_width="@dimen/size_42dp"
            android:layout_height="@dimen/size_42dp"
            android:layout_marginTop="@dimen/margin_60dp"
            android:src="@drawable/ic_check_activity_completed"
            app:tint="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_ok_text_view_title"
            style="@style/ChatOwlBottomSheetTitleTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_ok_image_view_icon"
            tools:text="@string/legal_email_sent_title" />

        <TextView
            android:id="@+id/dialog_ok_text_view_body"
            style="@style/ChatOwlBottomSheetBodyTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_36dp"
            android:layout_marginBottom="@dimen/margin_80dp"
            app:layout_constraintBottom_toTopOf="@+id/dialog_ok_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_ok_text_view_title"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@string/legal_email_sent_body" />

        <Button
            android:id="@+id/dialog_ok_button"
            style="@style/ChatOwlButtonStyle"
            android:layout_marginVertical="@dimen/margin_32dp"
            android:text="@string/ok"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>