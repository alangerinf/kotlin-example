<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/layout_chat_activity_layout"
        layout="@layout/row_activity_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_4dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/layout_chat_text_sent_text_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_4dp"
        android:textAllCaps="true"
        android:textColor="@color/gray3"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintStart_toStartOf="@+id/layout_chat_activity_layout"
        app:layout_constraintTop_toBottomOf="@+id/layout_chat_activity_layout"
        tools:text="8:24 am" />

</androidx.constraintlayout.widget.ConstraintLayout>