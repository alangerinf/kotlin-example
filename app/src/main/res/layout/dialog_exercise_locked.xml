<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_exercise_locked_layout_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialog_exercise_locked_text_view_title"
            style="@style/ChatOwlBottomSheetTitleTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/limited_exercise_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_exercise_locked_text_view_body"
            style="@style/ChatOwlTextViewStyle.Smallish.LightPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_40dp"
            android:layout_marginTop="@dimen/margin_32dp"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="3sp"
            android:text="@string/limited_exercise_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_exercise_locked_text_view_title" />

        <ImageView
            android:id="@+id/dialog_exercise_locked_image_view"
            android:layout_width="@dimen/size_58dp"
            android:layout_height="@dimen/size_58dp"
            android:layout_marginTop="@dimen/margin_40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_exercise_locked_text_view_body"
            tools:src="@drawable/ic_chat_selected"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/dialog_exercise_locked_text_view_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_32dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="3sp"
            app:layout_constraintEnd_toEndOf="@+id/dialog_exercise_locked_text_view_body"
            app:layout_constraintStart_toStartOf="@+id/dialog_exercise_locked_text_view_body"
            app:layout_constraintTop_toBottomOf="@+id/dialog_exercise_locked_image_view"
            tools:text="Pushing away negative thinking" />

        <Button
            android:id="@+id/dialog_exercise_locked_button_primary_action"
            style="@style/ChatOwlButtonStyle"
            android:layout_marginTop="@dimen/margin_52dp"
            android:layout_marginBottom="@dimen/margin_28dp"
            android:text="@string/ok"
            app:layout_constraintBottom_toTopOf="@+id/dialog_exercise_locked_text_view_secondary_action"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_exercise_locked_text_view_name" />

        <TextView
            android:id="@+id/dialog_exercise_locked_text_view_secondary_action"
            style="@style/ChatOwlTextViewStyle.Smallish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_40dp"
            android:fontFamily="sans-serif-medium"
            android:padding="@dimen/padding_4dp"
            android:text="@string/show_therapy_plan"
            android:textColor="@color/selector_color_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>