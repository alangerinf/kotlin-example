<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/dark">

    <TextView
        android:id="@+id/dialog_delete_account_text_view_log_in_title"
        style="@style/ChatOwlBottomSheetTitleTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_account_dialog_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_delete_account_text_view_body"
        style="@style/ChatOwlTextViewStyle.Smallish.LightPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_40dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:gravity="center"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="3sp"
        android:text="@string/delete_account_dialog_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_delete_account_text_view_log_in_title" />

    <Button
        android:id="@+id/dialog_delete_account_button_delete"
        style="@style/ChatOwlButtonStyle"
        android:layout_marginTop="@dimen/margin_48dp"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_delete_account_text_view_body" />

    <TextView
        android:id="@+id/dialog_delete_account_text_view_no_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginBottom="@dimen/margin_40dp"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/padding_8dp"
        android:text="@string/no_thanks"
        android:textColor="@color/selector_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_delete_account_button_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>