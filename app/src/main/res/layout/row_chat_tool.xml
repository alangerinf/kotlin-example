<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/row_chat_tool_layout_tool"
        layout="@layout/row_activity_large"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_card_height"
        android:layout_marginHorizontal="@dimen/margin_24dp"
        android:layout_marginVertical="@dimen/margin_4dp"
        app:layout_constraintBottom_toTopOf="@+id/row_chat_tool_text_view_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_chat_tool_text_view_time"
        style="@style/ChatOwlChatTimeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/row_chat_tool_layout_tool"
        tools:text="8:24 am" />

</androidx.constraintlayout.widget.ConstraintLayout>